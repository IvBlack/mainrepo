  <script>
    //получаем элементы по имени тега h3, h - массив
    let h = document.getElementsByTagName("h3");
    let lim = h.length + 3;
    let a = document.getElementById("show_more");
    //переопределяем с помощью JS значение get-параметра
    a.href = "index.php?limit=" + lim;
